#!/bin/sh

. /home/pi/fpp/scripts/common

logOutput

BASEDIR="/home/pi/fpp"

if [ -f "${BASEDIR}/src/fppd" -a "${BASEDIR}/src/fppd" -nt "${BASEDIR}/bin/fppd" ]
then
	echo "Starting ${BASEDIR}/src/fppd"
	nice -n -20 ${BASEDIR}/src/fppd --config-file /home/pi/media/settings --daemonize
else
	echo "Starting ${BASEDIR}/bin/fppd"
	nice -n -20 ${BASEDIR}/bin/fppd --config-file /home/pi/media/settings --daemonize
fi

