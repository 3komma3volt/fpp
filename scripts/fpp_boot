#!/bin/sh

BASEDIR=/home/pi/fpp
SCRIPTDIR=${BASEDIR}/scripts

if [ ! -d "/home/pi/media/logs" ]
then
	mkdir -p /home/pi/media/logs
	chown pi.pi /home/pi/media/logs
	chmod 775 /home/pi/media/logs
fi

if [ ! -f "/home/pi/.auto_update_disabled" ]
then
	${SCRIPTDIR}/git_pull
fi

${SCRIPTDIR}/upgrade_config

${SCRIPTDIR}/fppd_start

